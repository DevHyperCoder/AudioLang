<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="MainWindow" parent="GtkApplicationWindow">
    <property name="default-width">800</property>
    <property name="default-height">800</property>
    <property name="titlebar">
      <object class="GtkHeaderBar">
        <property name="title-widget">
          <object class="GtkLabel">
            <property name="label">&lt;b&gt;AudioLang&lt;/b&gt;</property>
            <property name="use-markup">true</property>
          </object>
        </property>
        <child type="start">
          <object class="GtkButton" id="back_btn">
            <property name="label">Back</property>
            <signal name="clicked" handler="on_back_btn_click"/>
          </object>
        </child>
        <child type="end">
          <object class="GtkButton">
            <property name="child">
              <object class="GtkImage">
                <property name="icon-name">bug-symbolic</property>
              </object>
            </property>
            <property name="tooltip-text">Send feedback / bug report</property>
            <signal name="clicked" handler="open_feedback_window"/>
          </object>
        </child>
        <child type="end">
          <object class="GtkButton">
            <property name="child">
              <object class="GtkImage">
                <property name="icon-name">help-about-symbolic</property>
              </object>
            </property>
            <property name="tooltip-text">About AudioLang</property>
            <signal name="clicked" handler="open_about_dialog"/>
          </object>
        </child>
      </object>
    </property>
    <property name="child">
      <object class="GtkStack" id="view_stack">
        <property name="transition-type">7</property>
        <child>
          <object class="GtkStackPage" id="preview_or_guess_box">
            <property name="name">preview_or_guess_box</property>
            <property name="child">
              <object class="GtkBox">
                <property name="halign">3</property>
                <property name="valign">3</property>
                <property name="orientation">0</property>
                <property name="spacing">30</property>
                <property name="margin-start">20</property>
                <property name="margin-end">20</property>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">1</property>
                    <property name="spacing">10</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">Listen to audio and see the spellings</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="preview_btn">
                        <property name="label">Preview</property>
                        <signal name="clicked" handler="on_preview_btn_click"/>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">1</property>
                    <property name="spacing">10</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="label">Listen to audio and guess the spellings</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="guess_btn">
                        <property name="label">Guess</property>
                        <signal name="clicked" handler="on_guess_btn_click"/>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
