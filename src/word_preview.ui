<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="WordPreview" parent="GtkBox">
    <child>
      <object class="AdwToastOverlay" id="toast_overlay">
        <property name="child">
          <object class="GtkBox">
            <child>
              <object class="GtkButton" id="prev_btn">
                <property name="child">
                  <object class="GtkImage">
                    <property name="icon-name">go-previous-symbolic</property>
                  </object>
                </property>
                <signal name="clicked" handler="prev_click"/>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="orientation">1</property>
                <property name="halign">3</property>
                <property name="valign">3</property>
                <property name="hexpand">true</property>
                <child>
                  <object class="GtkLabel" id="word_label">
                    <property name="label">Word</property>
                    <property name="margin-bottom">30</property>
                    <style>
                      <class name="title-1"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="halign">3</property>
                    <child>
                      <object class="GtkButton" id="play_btn">
                        <property name="child">
                          <object class="GtkImage">
                            <property name="icon-name">media-playback-start-symbolic</property>
                          </object>
                        </property>
                        <signal name="clicked" handler="play_handler"/>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="next_btn">
                <property name="child">
                  <object class="GtkImage">
                    <property name="icon-name">go-next-symbolic</property>
                  </object>
                </property>
                <signal name="clicked" handler="next_click"/>
              </object>
            </child>
          </object>
        </property>
      </object>
    </child>
  </template>
</interface>
